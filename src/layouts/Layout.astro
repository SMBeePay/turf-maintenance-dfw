---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  canonical?: string;
  ogType?: string;
}

const { 
  title, 
  description = "Professional artificial turf maintenance services in Dallas Fort-Worth. Expert cleaning, sanitization, and repair for synthetic sports surfaces. Serving DFW schools and sports facilities.",
  keywords = "artificial turf maintenance Dallas, synthetic turf cleaning Fort Worth, sports field maintenance DFW, turf repair Texas, artificial grass maintenance, field sanitization",
  canonical,
  ogType = "website"
} = Astro.props;

const siteUrl = "https://texasturfmaintenance.com";
const currentUrl = canonical ? `${siteUrl}${canonical}` : siteUrl;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Texas Turf Maintenance" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Texas Turf Maintenance" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "@id": "https://texasturfmaintenance.com/#business",
      "name": "Texas Turf Maintenance",
      "description": "Professional artificial turf maintenance services in Dallas Fort-Worth",
      "url": "https://texasturfmaintenance.com",
      "telephone": "",
      "email": "andrew@texasturfmaintenance.com",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "TX",
        "addressCountry": "US"
      },
      "areaServed": [
        {
          "@type": "City",
          "name": "Dallas",
          "sameAs": "https://en.wikipedia.org/wiki/Dallas"
        },
        {
          "@type": "City", 
          "name": "Fort Worth",
          "sameAs": "https://en.wikipedia.org/wiki/Fort_Worth,_Texas"
        }
      ],
      "serviceType": [
        "Artificial Turf Maintenance",
        "Synthetic Turf Cleaning", 
        "Sports Field Maintenance",
        "Turf Sanitization",
        "Field Repair Services"
      ]
    }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Import professional fonts */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

  /* CSS Custom Properties - Design System */
  :root {
    /* Texas-inspired color palette */
    --color-primary-50: #f0fdf4;
    --color-primary-100: #dcfce7;
    --color-primary-200: #bbf7d0;
    --color-primary-300: #86efac;
    --color-primary-400: #4ade80;
    --color-primary-500: #22c55e;
    --color-primary-600: #16a34a;
    --color-primary-700: #15803d;
    --color-primary-800: #166534;
    --color-primary-900: #14532d;

    /* Neutral colors with high contrast */
    --color-neutral-50: #f9fafb;
    --color-neutral-100: #f3f4f6;
    --color-neutral-200: #e5e7eb;
    --color-neutral-300: #d1d5db;
    --color-neutral-400: #9ca3af;
    --color-neutral-500: #6b7280;
    --color-neutral-600: #4b5563;
    --color-neutral-700: #374151;
    --color-neutral-800: #1f2937;
    --color-neutral-900: #111827;

    /* Accent colors */
    --color-blue-500: #3b82f6;
    --color-blue-600: #2563eb;
    --color-blue-700: #1d4ed8;
    --color-orange-500: #f97316;
    --color-red-500: #ef4444;

    /* Typography */
    --font-primary: 'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;

    /* Spacing scale */
    --space-xs: 0.25rem;   /* 4px */
    --space-sm: 0.5rem;    /* 8px */
    --space-md: 1rem;      /* 16px */
    --space-lg: 1.5rem;    /* 24px */
    --space-xl: 2rem;      /* 32px */
    --space-2xl: 3rem;     /* 48px */
    --space-3xl: 4rem;     /* 64px */
    --space-4xl: 5rem;     /* 80px */
    --space-5xl: 6rem;     /* 96px */

    /* Border radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  }

  /* Reset and base styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-body);
    line-height: 1.6;
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    color: var(--color-neutral-800);
    background-color: white;
    font-size: 16px;
    overflow-x: hidden;
  }

  /* Typography system */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-primary);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--color-neutral-900);
    letter-spacing: -0.025em;
  }

  h1 {
    font-size: clamp(2.25rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-lg);
  }

  h2 {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: var(--space-lg);
  }

  h3 {
    font-size: clamp(1.375rem, 3vw, 2rem);
    font-weight: 600;
  }

  h4 {
    font-size: 1.25rem;
    font-weight: 600;
  }

  h5 {
    font-size: 1.125rem;
    font-weight: 600;
  }

  h6 {
    font-size: 1rem;
    font-weight: 600;
  }

  p {
    margin-bottom: var(--space-md);
    color: var(--color-neutral-600);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .text-large {
    font-size: 1.25rem;
    line-height: 1.8;
  }

  .text-small {
    font-size: 0.875rem;
  }

  .text-xs {
    font-size: 0.75rem;
  }

  /* Container system */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .container-wide {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  /* Button system */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: linear-gradient(135deg, var(--color-primary-500) 0%, var(--color-primary-600) 100%);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: var(--shadow-md);
    font-family: var(--font-primary);
    letter-spacing: 0.025em;
  }

  .btn:hover {
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
    box-shadow: var(--shadow-lg);
    transform: translateY(-1px);
    color: white;
  }

  .btn:active {
    transform: translateY(0);
    box-shadow: var(--shadow-md);
  }

  .btn-secondary {
    background: white;
    color: var(--color-primary-600);
    border: 2px solid var(--color-primary-500);
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    background: var(--color-primary-50);
    border-color: var(--color-primary-600);
    color: var(--color-primary-700);
    transform: translateY(-1px);
  }

  .btn-outline {
    background: transparent;
    color: var(--color-neutral-700);
    border: 2px solid var(--color-neutral-300);
    box-shadow: none;
  }

  .btn-outline:hover {
    background: var(--color-neutral-50);
    border-color: var(--color-neutral-400);
    color: var(--color-neutral-800);
  }

  .btn-large {
    padding: var(--space-lg) var(--space-2xl);
    font-size: 1.125rem;
  }

  .btn-small {
    padding: var(--space-sm) var(--space-md);
    font-size: 0.875rem;
  }

  /* Form elements */
  input, select, textarea {
    font-family: inherit;
    font-size: 1rem;
    color: var(--color-neutral-800);
    background: white;
    border: 2px solid var(--color-neutral-200);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    transition: all 0.2s ease;
    width: 100%;
  }

  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px rgb(34 197 94 / 0.1);
  }

  label {
    font-weight: 600;
    color: var(--color-neutral-700);
    margin-bottom: var(--space-sm);
    display: block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Link styles */
  a {
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-primary-700);
  }

  /* Focus states for accessibility */
  a:focus-visible, 
  button:focus-visible, 
  input:focus-visible, 
  select:focus-visible, 
  textarea:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }

  /* List styles */
  ul, ol {
    margin-bottom: var(--space-md);
  }

  li {
    margin-bottom: var(--space-xs);
  }

  /* Section spacing */
  .section {
    padding: var(--space-4xl) 0;
  }

  .section-sm {
    padding: var(--space-2xl) 0;
  }

  .section-lg {
    padding: var(--space-5xl) 0;
  }

  /* Utility classes */
  .text-center { text-align: center; }
  .text-left { text-align: left; }
  .text-right { text-align: right; }

  .text-primary { color: var(--color-primary-600); }
  .text-secondary { color: var(--color-neutral-600); }
  .text-muted { color: var(--color-neutral-500); }
  .text-white { color: white; }

  .bg-primary { background-color: var(--color-primary-500); }
  .bg-primary-light { background-color: var(--color-primary-50); }
  .bg-neutral-light { background-color: var(--color-neutral-50); }
  .bg-white { background-color: white; }

  .rounded { border-radius: var(--radius-md); }
  .rounded-lg { border-radius: var(--radius-lg); }
  .rounded-xl { border-radius: var(--radius-xl); }

  .shadow { box-shadow: var(--shadow-md); }
  .shadow-lg { box-shadow: var(--shadow-lg); }
  .shadow-xl { box-shadow: var(--shadow-xl); }

  .mb-0 { margin-bottom: 0; }
  .mb-sm { margin-bottom: var(--space-sm); }
  .mb-md { margin-bottom: var(--space-md); }
  .mb-lg { margin-bottom: var(--space-lg); }
  .mb-xl { margin-bottom: var(--space-xl); }
  .mb-2xl { margin-bottom: var(--space-2xl); }

  .mt-0 { margin-top: 0; }
  .mt-sm { margin-top: var(--space-sm); }
  .mt-md { margin-top: var(--space-md); }
  .mt-lg { margin-top: var(--space-lg); }
  .mt-xl { margin-top: var(--space-xl); }
  .mt-2xl { margin-top: var(--space-2xl); }

  /* Grid system */
  .grid {
    display: grid;
    gap: var(--space-xl);
  }

  .grid-2 { grid-template-columns: repeat(2, 1fr); }
  .grid-3 { grid-template-columns: repeat(3, 1fr); }
  .grid-4 { grid-template-columns: repeat(4, 1fr); }

  .grid-auto {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .flex {
    display: flex;
    gap: var(--space-md);
  }

  .flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
  }

  .flex-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--space-md);
    }

    .grid-2,
    .grid-3,
    .grid-4 {
      grid-template-columns: 1fr;
    }

    .section {
      padding: var(--space-2xl) 0;
    }

    .section-lg {
      padding: var(--space-3xl) 0;
    }

    .btn {
      padding: var(--space-md) var(--space-lg);
    }

    .btn-large {
      padding: var(--space-lg) var(--space-xl);
      font-size: 1rem;
    }

    .flex-between {
      flex-direction: column;
      align-items: stretch;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 var(--space-md);
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    p {
      font-size: 1rem;
    }
  }

  /* Print styles */
  @media print {
    .btn, .mobile-menu-toggle {
      display: none !important;
    }
    
    * {
      color: black !important;
      background: white !important;
    }
  }

  /* Loading state */
  .loading {
    opacity: 0.7;
    pointer-events: none;
    cursor: not-allowed;
  }

  /* Flat Icon System */
  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: var(--color-primary-500);
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    position: relative;
    box-shadow: var(--shadow-md);
  }

  .icon-large {
    width: 64px;
    height: 64px;
    font-size: 2rem;
  }

  .icon-small {
    width: 32px;
    height: 32px;
    font-size: 1rem;
  }

  .icon-secondary {
    background: var(--color-neutral-100);
    color: var(--color-primary-600);
  }

  .icon-white {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    backdrop-filter: blur(10px);
  }

  /* Specific icons using CSS pseudo-elements */
  .icon-leaf::before { content: "🌿"; }
  .icon-cleaning::before { content: "✨"; }
  .icon-sanitize::before { content: "💧"; }
  .icon-balance::before { content: "⚖"; }
  .icon-tools::before { content: "🔧"; }
  .icon-target::before { content: "🎯"; }
  .icon-check::before { content: "✓"; }
  .icon-stadium::before { content: "🏟"; }
  .icon-shield::before { content: "🛡"; }
  .icon-chart::before { content: "📊"; }
  .icon-cycle::before { content: "🔄"; }
  .icon-virus::before { content: "🦠"; }
  .icon-email::before { content: "✉"; }
  .icon-location::before { content: "📍"; }
  .icon-time::before { content: "⏱"; }
  .icon-growth::before { content: "📈"; }
  .icon-clipboard::before { content: "📋"; }
  .icon-microscope::before { content: "🔬"; }
  .icon-football::before { content: "🏈"; }
  .icon-lightning::before { content: "⚡"; }

  /* Animations */
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .slide-up {
    animation: slideUp 0.6s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>