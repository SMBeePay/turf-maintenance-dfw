---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Arlington Artificial Turf Maintenance | Synthetic Field Cleaning Services Arlington TX"
  description="Professional artificial turf maintenance services in Arlington, Texas. Expert synthetic turf cleaning, sanitization, and repair for Arlington ISD and professional sports facilities."
  keywords="artificial turf maintenance Arlington, synthetic turf cleaning Arlington TX, Arlington ISD field maintenance, Rangers stadium area, sports field cleaning Arlington"
  canonical="/arlington"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> Arlington, TX</div>
        <h1 class="text-white">Arlington Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for Arlington's major league sports city</p>
      </div>
    </section>

    <!-- Arlington Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving Arlington's Sports Legacy</h2>
            <p class="text-large text-secondary">Arlington stands as the heart of professional sports in North Texas, hosting major league teams and championship events. Our artificial turf maintenance services are designed to meet the professional standards that define Arlington's sports culture.</p>
            
            <div class="service-highlights">
              <h3>Major League Standards</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-stadium icon-small"></span> Professional stadium district experience</li>
                <li><span class="icon icon-target icon-small"></span> Major event preparation expertise</li>
                <li><span class="icon icon-shield icon-small"></span> High-capacity venue management</li>
                <li><span class="icon icon-tools icon-small"></span> Championship-level facility care</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Major League</div>
              <div class="stat-label">Sports City</div>
              <p class="text-small text-secondary">Professional venue expertise</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Stadium</div>
              <div class="stat-label">District Ready</div>
              <p class="text-small text-secondary">Entertainment complex standards</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Event</div>
              <div class="stat-label">Preparation</div>
              <p class="text-small text-secondary">Championship game readiness</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Arlington Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Arlington's Sports Facilities</h2>
          <p class="text-large text-secondary">Professional artificial turf maintenance for Arlington's athletic venues</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>Professional Sports District</h3>
            <p>Arlington's major league and professional venues:</p>
            <ul>
              <li>Professional stadium complexes</li>
              <li>Training and practice facilities</li>
              <li>Entertainment district venues</li>
              <li>Major event hosting sites</li>
              <li>Championship preparation areas</li>
            </ul>
            <p class="service-note">Major league standards for professional sports venues.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Arlington ISD Athletics</h3>
            <p>Arlington Independent School District programs:</p>
            <ul>
              <li>Arlington High School Colts</li>
              <li>Bowie High School Volunteers</li>
              <li>Lamar High School Vikings</li>
              <li>Martin High School Warriors</li>
              <li>Sam Houston High School Texans</li>
            </ul>
            <p class="service-note">Supporting Arlington ISD's comprehensive athletic programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>University & Community</h3>
            <p>Arlington's educational and community sports facilities:</p>
            <ul>
              <li>UT Arlington Mavericks facilities</li>
              <li>Community college athletic venues</li>
              <li>Municipal sports complexes</li>
              <li>Youth development centers</li>
              <li>Recreation district fields</li>
            </ul>
            <p class="service-note">Comprehensive care for Arlington's diverse sports infrastructure.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Arlington Sports Culture -->
    <section class="sports-culture section">
      <div class="container">
        <h2 class="text-center mb-2xl">Arlington's Championship Culture</h2>
        <div class="culture-content grid grid-2">
          <div class="culture-info">
            <h3>Professional Sports Heritage</h3>
            <p>Arlington's identity as a major sports destination creates unique expectations for facility maintenance:</p>
            <ul class="culture-list">
              <li><strong>Professional Standards:</strong> Facilities that reflect major league quality</li>
              <li><strong>Event Hosting:</strong> Venues prepared for championship competitions</li>
              <li><strong>High Traffic Management:</strong> Durability for intensive use</li>
              <li><strong>Media-Ready Appearance:</strong> Photogenic surfaces for broadcasts</li>
              <li><strong>Safety Excellence:</strong> Meeting professional athlete protection standards</li>
            </ul>
          </div>
          
          <div class="professional-approach bg-primary-light rounded-lg">
            <h3>Arlington-Focused Maintenance</h3>
            <div class="approach-list">
              <div class="approach-item">
                <span class="icon icon-stadium icon-small"></span>
                <div>
                  <h4>Stadium-Quality Service</h4>
                  <p>Maintenance protocols that meet professional sports venue standards.</p>
                </div>
              </div>
              <div class="approach-item">
                <span class="icon icon-time icon-small"></span>
                <div>
                  <h4>Event Coordination</h4>
                  <p>Scheduling around major events, games, and championship preparations.</p>
                </div>
              </div>
              <div class="approach-item">
                <span class="icon icon-shield icon-small"></span>
                <div>
                  <h4>High-Traffic Durability</h4>
                  <p>Specialized care for fields experiencing intensive professional use.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="service-areas section bg-neutral-light">
      <div class="container">
        <h2 class="text-center mb-2xl">Arlington Service Coverage</h2>
        <div class="areas-content">
          <p class="text-center text-large text-secondary mb-xl">Complete artificial turf maintenance throughout Arlington's sports districts.</p>
          <div class="areas-grid grid grid-4">
            <div class="area-column">
              <h4>Entertainment District</h4>
              <ul>
                <li>Stadium complexes</li>
                <li>Professional venues</li>
                <li>Training facilities</li>
                <li>Event centers</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>North Arlington</h4>
              <ul>
                <li>DFW area facilities</li>
                <li>Corporate complexes</li>
                <li>Business district venues</li>
                <li>Airport vicinity fields</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>Central Arlington</h4>
              <ul>
                <li>UT Arlington campus</li>
                <li>Downtown facilities</li>
                <li>Historic district venues</li>
                <li>Municipal complexes</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>South Arlington</h4>
              <ul>
                <li>Arlington ISD schools</li>
                <li>Community centers</li>
                <li>Youth sports facilities</li>
                <li>Residential area fields</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">Major League Turf Maintenance</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Professional artificial turf maintenance worthy of Arlington's championship sports legacy.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get Arlington Quote</a>
          <a href="/dallas" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">DFW Metro Service</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list, .culture-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .culture-list li {
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .culture-list strong {
    color: var(--color-primary-600);
  }

  .professional-approach {
    padding: var(--space-2xl);
  }

  .approach-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .approach-item h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .approach-item p {
    color: var(--color-neutral-600);
    font-size: 0.95rem;
    margin: 0;
  }

  .area-column {
    text-align: center;
    padding: var(--space-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .area-column h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: var(--space-xs) 0;
    color: var(--color-neutral-600);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content,
    .culture-content {
      grid-template-columns: 1fr;
    }

    .areas-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .areas-grid {
      grid-template-columns: 1fr;
    }

    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>