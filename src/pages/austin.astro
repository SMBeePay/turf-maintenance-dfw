---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Austin Artificial Turf Maintenance | Sports Field Cleaning Services Austin TX"
  description="Professional artificial turf maintenance services in Austin, Texas. Expert synthetic turf cleaning, sanitization, and repair for Austin area schools and sports facilities."
  keywords="artificial turf maintenance Austin, synthetic turf cleaning Austin, sports field maintenance Austin TX, Austin turf repair services, artificial grass cleaning Austin"
  canonical="/austin"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> Austin Area Service</div>
        <h1 class="text-white">Austin Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for Austin schools, sports complexes, and facilities</p>
      </div>
    </section>

    <!-- Austin Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving Austin's Sports Community</h2>
            <p class="text-large text-secondary">Austin's hot summers and variable weather patterns require specialized artificial turf maintenance. From UT campus facilities to local high schools, we provide expert care for Central Texas sports venues.</p>
            
            <div class="service-highlights">
              <h3>Central Texas Expertise</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-target icon-small"></span> University-level facility experience</li>
                <li><span class="icon icon-tools icon-small"></span> Austin ISD partnership capabilities</li>
                <li><span class="icon icon-shield icon-small"></span> Heat management for Texas summers</li>
                <li><span class="icon icon-cleaning icon-small"></span> Cedar pollen and allergen removal</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">University</div>
              <div class="stat-label">Level Service</div>
              <p class="text-small text-secondary">UT campus facility expertise</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Cedar</div>
              <div class="stat-label">Pollen Management</div>
              <p class="text-small text-secondary">Austin's unique allergen challenges</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Hill Country</div>
              <div class="stat-label">Weather Ready</div>
              <p class="text-small text-secondary">Variable climate adaptation</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Austin Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Austin Area Sports Facilities</h2>
          <p class="text-large text-secondary">Comprehensive maintenance for Austin's diverse sports facility network</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>Austin ISD Athletics</h3>
            <p>Major high schools with artificial turf throughout Austin:</p>
            <ul>
              <li>Westlake High School</li>
              <li>Lake Travis High School</li>
              <li>Bowie High School</li>
              <li>Anderson High School</li>
              <li>Austin High School</li>
            </ul>
            <p class="service-note">Expert maintenance for Austin area high school athletic programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>University of Texas</h3>
            <p>UT Austin athletic facilities and training venues:</p>
            <ul>
              <li>UT Longhorn practice facilities</li>
              <li>Intramural sports fields</li>
              <li>Campus recreation fields</li>
              <li>Training and conditioning areas</li>
              <li>Student athletic complexes</li>
            </ul>
            <p class="service-note">University-level maintenance standards and protocols.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>Community & Private</h3>
            <p>Austin area community and private sports facilities:</p>
            <ul>
              <li>City of Austin park fields</li>
              <li>Austin FC training facilities</li>
              <li>Private sports academies</li>
              <li>Youth soccer complexes</li>
              <li>Multi-sport training centers</li>
            </ul>
            <p class="service-note">Tailored maintenance for Austin's diverse facility types.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Austin Climate Considerations -->
    <section class="climate-section section">
      <div class="container">
        <h2 class="text-center mb-2xl">Austin Climate & Maintenance Factors</h2>
        <div class="climate-content grid grid-2">
          <div class="climate-info">
            <h3>Central Texas Conditions</h3>
            <p>Austin's location in Central Texas creates unique maintenance requirements:</p>
            <ul class="climate-list">
              <li><strong>Cedar Season:</strong> Heavy pollen loads requiring specialized cleaning</li>
              <li><strong>Variable Weather:</strong> Rapid temperature and weather changes</li>
              <li><strong>Hot Summers:</strong> Extreme heat requiring cooling protocols</li>
              <li><strong>Flash Floods:</strong> Sudden heavy rainfall management</li>
              <li><strong>Hill Country Winds:</strong> Debris and dust accumulation</li>
            </ul>
          </div>
          
          <div class="climate-services bg-primary-light rounded-lg">
            <h3>Austin-Specific Services</h3>
            <div class="service-list">
              <div class="service-item">
                <span class="icon icon-cleaning icon-small"></span>
                <div>
                  <h4>Cedar Pollen Removal</h4>
                  <p>Specialized deep cleaning during Austin's intense cedar pollen seasons.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-sanitize icon-small"></span>
                <div>
                  <h4>Flash Flood Recovery</h4>
                  <p>Rapid response and drainage solutions for Central Texas flooding events.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-shield icon-small"></span>
                <div>
                  <h4>Heat Protection</h4>
                  <p>Cooling treatments and UV protection for extreme summer conditions.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Austin Service Areas -->
    <section class="service-areas section bg-neutral-light">
      <div class="container">
        <h2 class="text-center mb-2xl">Central Texas Service Coverage</h2>
        <div class="city-pages-section mb-2xl">
          <h3 class="text-center mb-xl">Featured Austin Metro Cities</h3>
          <div class="featured-cities grid grid-1" style="max-width: 400px; margin: 0 auto;">
            <div class="city-card bg-white rounded-lg shadow">
              <h4><a href="/round-rock">Round Rock</a></h4>
              <p>Growing sports community with expanding athletic programs</p>
            </div>
          </div>
        </div>
        
        <div class="areas-grid grid grid-4">
          <div class="area-column">
            <h4>North Austin</h4>
            <ul>
              <li><a href="/round-rock">Round Rock</a></li>
              <li>Cedar Park</li>
              <li>Leander</li>
              <li>Georgetown</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>South Austin</h4>
            <ul>
              <li>Buda</li>
              <li>Kyle</li>
              <li>San Marcos</li>
              <li>Dripping Springs</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>East Austin</h4>
            <ul>
              <li>Pflugerville</li>
              <li>Manor</li>
              <li>Elgin</li>
              <li>Bastrop</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>West Austin</h4>
            <ul>
              <li>Lake Travis</li>
              <li>Westlake</li>
              <li>Lakeway</li>
              <li>Bee Cave</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">Austin Sports Field Maintenance</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Professional artificial turf care designed for Central Texas conditions and Austin's sports community.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get Austin Quote</a>
          <a href="/services" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">View Services</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Reuse styles from Dallas/Houston pages */
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .climate-services {
    padding: var(--space-2xl);
  }

  .service-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .service-item h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .service-item p {
    color: var(--color-neutral-600);
    font-size: 0.95rem;
    margin: 0;
  }

  .area-column {
    text-align: center;
    padding: var(--space-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .area-column h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: var(--space-xs) 0;
    color: var(--color-neutral-600);
  }

  /* Featured Cities */
  .city-pages-section h3 {
    color: var(--color-neutral-900);
    font-size: 1.5rem;
    margin-bottom: var(--space-xl);
  }

  .city-card {
    padding: var(--space-lg);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .city-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .city-card h4 {
    margin-bottom: var(--space-sm);
  }

  .city-card h4 a {
    color: var(--color-primary-600);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .city-card h4 a:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  .city-card p {
    color: var(--color-neutral-600);
    font-size: 0.9rem;
    margin: 0;
  }

  .area-column li a {
    color: var(--color-primary-600);
    text-decoration: none;
    font-weight: 600;
  }

  .area-column li a:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  .climate-list {
    list-style: none;
    padding: 0;
  }

  .climate-list li {
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .climate-list strong {
    color: var(--color-primary-600);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content,
    .climate-content {
      grid-template-columns: 1fr;
    }

    .areas-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .areas-grid {
      grid-template-columns: 1fr;
    }

    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>