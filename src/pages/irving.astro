---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Irving Artificial Turf Maintenance | Synthetic Field Cleaning Services Irving TX"
  description="Professional artificial turf maintenance services in Irving, Texas. Expert synthetic turf cleaning, sanitization, and repair for Irving ISD and local sports facilities."
  keywords="artificial turf maintenance Irving, synthetic turf cleaning Irving TX, Irving ISD field maintenance, sports field cleaning Irving, turf repair Irving Texas"
  canonical="/irving"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> Irving, TX</div>
        <h1 class="text-white">Irving Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for Irving schools and sports facilities</p>
      </div>
    </section>

    <!-- Irving Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving Irving's Diverse Sports Community</h2>
            <p class="text-large text-secondary">Irving's central location in the Dallas metroplex makes it a hub for sports activity. From Irving ISD facilities to corporate sports venues, we provide specialized artificial turf maintenance that meets the diverse needs of this dynamic city.</p>
            
            <div class="service-highlights">
              <h3>Irving-Focused Maintenance Excellence</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-stadium icon-small"></span> Experience with major venue standards</li>
                <li><span class="icon icon-tools icon-small"></span> Corporate and municipal facility expertise</li>
                <li><span class="icon icon-shield icon-small"></span> Multi-cultural sports program support</li>
                <li><span class="icon icon-cleaning icon-small"></span> DFW airport area environmental considerations</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Central</div>
              <div class="stat-label">DFW Location</div>
              <p class="text-small text-secondary">Strategic metroplex positioning</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Diverse</div>
              <div class="stat-label">Sports Programs</div>
              <p class="text-small text-secondary">Multi-cultural athletic support</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Corporate</div>
              <div class="stat-label">Facility Ready</div>
              <p class="text-small text-secondary">Business venue expertise</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Irving Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Irving Area Sports Facilities</h2>
          <p class="text-large text-secondary">Comprehensive turf maintenance for Irving's athletic venues</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>Irving ISD Schools</h3>
            <p>Irving Independent School District athletic programs:</p>
            <ul>
              <li>Irving High School Tigers</li>
              <li>MacArthur High School Cardinals</li>
              <li>Nimitz High School Vikings</li>
              <li>Irving High School stadium</li>
              <li>District athletic complexes</li>
            </ul>
            <p class="service-note">Supporting Irving ISD's comprehensive athletic programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>Corporate & Municipal</h3>
            <p>Irving's business and municipal sports facilities:</p>
            <ul>
              <li>Corporate campus athletic areas</li>
              <li>Irving Parks and Recreation fields</li>
              <li>Business district sports venues</li>
              <li>Municipal training facilities</li>
              <li>Community center fields</li>
            </ul>
            <p class="service-note">Professional maintenance for Irving's business community.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Youth & Community Sports</h3>
            <p>Irving's youth sports and recreational facilities:</p>
            <ul>
              <li>Youth soccer leagues</li>
              <li>Community sports complexes</li>
              <li>Recreational athletic venues</li>
              <li>Private training facilities</li>
              <li>Multi-sport youth centers</li>
            </ul>
            <p class="service-note">Maintaining fields for Irving's growing youth sports programs.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Irving Advantages -->
    <section class="advantages section">
      <div class="container">
        <h2 class="text-center mb-2xl">Why Irving Facilities Choose Us</h2>
        <div class="advantages-content grid grid-2">
          <div class="advantages-info">
            <h3>Central DFW Expertise</h3>
            <p>Irving's location at the heart of the Dallas-Fort Worth metroplex creates unique opportunities and challenges for artificial turf maintenance:</p>
            <ul class="advantages-list">
              <li><strong>Airport Proximity:</strong> Understanding environmental factors from DFW Airport</li>
              <li><strong>Urban Density:</strong> Efficient service in high-traffic areas</li>
              <li><strong>Corporate Standards:</strong> Meeting professional venue expectations</li>
              <li><strong>Community Diversity:</strong> Supporting varied recreational needs</li>
            </ul>
          </div>
          
          <div class="service-approach bg-primary-light rounded-lg">
            <h3>Irving-Tailored Services</h3>
            <div class="service-list">
              <div class="service-item">
                <span class="icon icon-cleaning icon-small"></span>
                <div>
                  <h4>Environmental Management</h4>
                  <p>Specialized cleaning protocols for urban and airport-adjacent locations.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-time icon-small"></span>
                <div>
                  <h4>Flexible Corporate Scheduling</h4>
                  <p>Working around business and educational calendars efficiently.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-shield icon-small"></span>
                <div>
                  <h4>Professional Standards</h4>
                  <p>Meeting the high expectations of Irving's corporate and educational facilities.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="service-areas section bg-neutral-light">
      <div class="container">
        <h2 class="text-center mb-2xl">Irving Service Coverage</h2>
        <div class="areas-content">
          <p class="text-center text-large text-secondary mb-xl">Complete artificial turf maintenance throughout Irving and surrounding areas.</p>
          <div class="areas-grid grid grid-3">
            <div class="area-column">
              <h4>North Irving</h4>
              <ul>
                <li>Las Colinas area</li>
                <li>Valley Ranch district</li>
                <li>DFW Airport vicinity</li>
                <li>Corporate corridors</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>Central Irving</h4>
              <ul>
                <li>Historic Irving</li>
                <li>Downtown district</li>
                <li>Heritage district</li>
                <li>Residential areas</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>South Irving</h4>
              <ul>
                <li>South Irving neighborhoods</li>
                <li>Industrial district areas</li>
                <li>Community centers</li>
                <li>Recreational facilities</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">Professional Turf Care for Irving</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Expert artificial turf maintenance designed for Irving's diverse facility needs.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get Irving Quote</a>
          <a href="/dallas" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">Dallas Metro Service</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list, .advantages-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .advantages-list li {
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .advantages-list strong {
    color: var(--color-primary-600);
  }

  .service-approach {
    padding: var(--space-2xl);
  }

  .service-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .service-item h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .service-item p {
    color: var(--color-neutral-600);
    font-size: 0.95rem;
    margin: 0;
  }

  .area-column {
    text-align: center;
    padding: var(--space-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .area-column h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: var(--space-xs) 0;
    color: var(--color-neutral-600);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content,
    .advantages-content {
      grid-template-columns: 1fr;
    }

    .areas-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>