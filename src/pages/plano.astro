---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Plano Artificial Turf Maintenance | Synthetic Field Cleaning Services Plano TX"
  description="Professional artificial turf maintenance services in Plano, Texas. Expert synthetic turf cleaning, sanitization, and repair for Plano ISD and local sports facilities."
  keywords="artificial turf maintenance Plano, synthetic turf cleaning Plano TX, Plano ISD field maintenance, sports field cleaning Plano, turf repair Plano Texas"
  canonical="/plano"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> Plano, TX</div>
        <h1 class="text-white">Plano Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for Plano schools and sports facilities</p>
      </div>
    </section>

    <!-- Plano Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving Plano's Premier Sports Facilities</h2>
            <p class="text-large text-secondary">Plano is home to some of Texas's most prestigious high school athletic programs and sports facilities. Our specialized artificial turf maintenance services are designed to meet the high standards expected by Plano's competitive sports community.</p>
            
            <div class="service-highlights">
              <h3>Why Plano Facilities Trust Our Service</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-target icon-small"></span> Experience with championship-level facilities</li>
                <li><span class="icon icon-shield icon-small"></span> Understanding of Plano ISD's high standards</li>
                <li><span class="icon icon-tools icon-small"></span> Flexible scheduling around busy sports calendars</li>
                <li><span class="icon icon-cleaning icon-small"></span> North Texas climate expertise</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Championship</div>
              <div class="stat-label">Level Standards</div>
              <p class="text-small text-secondary">Meeting Plano's excellence expectations</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">UIL</div>
              <div class="stat-label">Compliant Service</div>
              <p class="text-small text-secondary">Supporting competitive athletics</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Year-Round</div>
              <div class="stat-label">Maintenance</div>
              <p class="text-small text-secondary">Supporting multi-sport facilities</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Plano Schools & Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Plano Area Sports Facilities</h2>
          <p class="text-large text-secondary">Supporting artificial turf maintenance needs across Plano's athletic venues</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>Plano ISD High Schools</h3>
            <p>Plano Independent School District's renowned athletic programs:</p>
            <ul>
              <li>Plano Senior High School Wildcats</li>
              <li>Plano East Senior High School Panthers</li>
              <li>Plano West Senior High School Wolves</li>
              <li>Clark High School Chargers</li>
              <li>Plano ISD Athletic Complex</li>
            </ul>
            <p class="service-note">Professional maintenance for Plano's championship-caliber programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Youth & Community Sports</h3>
            <p>Plano's extensive youth sports infrastructure:</p>
            <ul>
              <li>Plano Sports Authority facilities</li>
              <li>Bob Woodruff Park sports fields</li>
              <li>Plano Centre athletic venues</li>
              <li>Private youth academies</li>
              <li>Select soccer club facilities</li>
            </ul>
            <p class="service-note">Supporting Plano's youth sports development programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>Private & Training Facilities</h3>
            <p>Plano's premier private athletic venues:</p>
            <ul>
              <li>Elite training academies</li>
              <li>Private sports clubs</li>
              <li>Corporate athletic facilities</li>
              <li>Specialized training centers</li>
              <li>Multi-sport complexes</li>
            </ul>
            <p class="service-note">Customized maintenance for Plano's specialized facilities.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Plano Sports Culture -->
    <section class="sports-culture section">
      <div class="container">
        <h2 class="text-center mb-2xl">Plano's Championship Sports Culture</h2>
        <div class="culture-content grid grid-2">
          <div class="culture-info">
            <h3>Excellence in Athletics</h3>
            <p>Plano has built a reputation for athletic excellence, with multiple UIL state championships and nationally recognized programs. This commitment to excellence extends to facility maintenance:</p>
            <ul class="culture-list">
              <li><strong>Championship Standards:</strong> Maintaining fields worthy of state-level competition</li>
              <li><strong>Multi-Sport Usage:</strong> Fields supporting football, soccer, lacrosse, and more</li>
              <li><strong>Year-Round Programs:</strong> Facilities in constant use requiring consistent care</li>
              <li><strong>Community Pride:</strong> Fields that reflect Plano's commitment to quality</li>
            </ul>
          </div>
          
          <div class="maintenance-approach bg-primary-light rounded-lg">
            <h3>Our Plano-Focused Approach</h3>
            <div class="approach-list">
              <div class="approach-item">
                <span class="icon icon-target icon-small"></span>
                <div>
                  <h4>Championship-Ready Maintenance</h4>
                  <p>Ensuring fields meet the standards expected for playoff and championship games.</p>
                </div>
              </div>
              <div class="approach-item">
                <span class="icon icon-time icon-small"></span>
                <div>
                  <h4>Coordinated Scheduling</h4>
                  <p>Working around Plano's busy athletic calendars and multiple sports seasons.</p>
                </div>
              </div>
              <div class="approach-item">
                <span class="icon icon-shield icon-small"></span>
                <div>
                  <h4>Safety-First Protocols</h4>
                  <p>Maintaining the highest safety standards for student-athlete protection.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="service-areas section bg-neutral-light">
      <div class="container">
        <h2 class="text-center mb-2xl">Plano Service Coverage</h2>
        <div class="areas-content">
          <p class="text-center text-large text-secondary mb-xl">We provide comprehensive artificial turf maintenance throughout Plano and surrounding areas.</p>
          <div class="areas-grid grid grid-3">
            <div class="area-column">
              <h4>West Plano</h4>
              <ul>
                <li>Legacy West area</li>
                <li>Willow Bend district</li>
                <li>Preston Road corridor</li>
                <li>West Plano neighborhoods</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>East Plano</h4>
              <ul>
                <li>East Plano communities</li>
                <li>Jupiter Road area</li>
                <li>Plano Centre district</li>
                <li>Collin Creek area</li>
              </ul>
            </div>
            <div class="area-column">
              <h4>Central Plano</h4>
              <ul>
                <li>Downtown Plano</li>
                <li>Historic district</li>
                <li>Central Plano schools</li>
                <li>Parker Road corridor</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">Professional Turf Maintenance for Plano</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Ready to provide championship-level artificial turf maintenance for your Plano facility.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get Plano Quote</a>
          <a href="/dallas" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">Dallas Metro Service</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Reuse base styles from main location pages */
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .culture-list {
    list-style: none;
    padding: 0;
  }

  .culture-list li {
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .culture-list strong {
    color: var(--color-primary-600);
  }

  .maintenance-approach {
    padding: var(--space-2xl);
  }

  .approach-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .approach-item h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .approach-item p {
    color: var(--color-neutral-600);
    font-size: 0.95rem;
    margin: 0;
  }

  .area-column {
    text-align: center;
    padding: var(--space-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .area-column h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: var(--space-xs) 0;
    color: var(--color-neutral-600);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content,
    .culture-content {
      grid-template-columns: 1fr;
    }

    .areas-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>