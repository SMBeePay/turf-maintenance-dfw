---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Budget Planning Template Download | Texas Turf Maintenance"
  description="Download our artificial turf maintenance budget planning template. Professional Excel template for athletic directors and facility managers."
  keywords="artificial turf budget template, field maintenance budget planning, sports field budget calculator, turf maintenance cost template"
  canonical="/resources/budget-template"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-budget icon-small icon-white"></span> Budget Planning</div>
        <h1 class="text-white">Artificial Turf Budget Planning Template</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional Excel template for comprehensive maintenance budget planning</p>
      </div>
    </section>

    <!-- Download Section -->
    <section class="download-section section">
      <div class="container">
        <div class="download-layout grid grid-2">
          <!-- Resource Preview -->
          <div class="resource-preview">
            <div class="preview-card bg-white shadow-lg rounded-lg">
              <div class="preview-header">
                <div class="file-icon icon icon-budget icon-large icon-primary"></div>
                <div class="file-info">
                  <h3>Budget Planning Template</h3>
                  <div class="file-meta">
                    <span class="file-type">Excel</span>
                    <span class="file-size">850 KB</span>
                    <span class="file-sheets">5 Sheets</span>
                  </div>
                </div>
              </div>
              
              <div class="preview-content">
                <h4>Template Features:</h4>
                <ul class="checklist-items">
                  <li><span class="icon icon-check icon-small"></span> Annual budget planning worksheet</li>
                  <li><span class="icon icon-check icon-small"></span> Monthly cash flow projections</li>
                  <li><span class="icon icon-check icon-small"></span> Cost comparison calculators</li>
                  <li><span class="icon icon-check icon-small"></span> ROI analysis formulas</li>
                  <li><span class="icon icon-check icon-small"></span> Emergency fund planning</li>
                  <li><span class="icon icon-check icon-small"></span> Vendor comparison sheets</li>
                  <li><span class="icon icon-check icon-small"></span> Multi-year forecasting</li>
                  <li><span class="icon icon-check icon-small"></span> Automatic calculations</li>
                </ul>
                
                <div class="template-preview">
                  <h4>What's Included:</h4>
                  <div class="sheets-list">
                    <div class="sheet-item">
                      <span class="sheet-icon">üìä</span>
                      <div>
                        <strong>Annual Overview</strong>
                        <p>Complete yearly budget with all maintenance categories</p>
                      </div>
                    </div>
                    <div class="sheet-item">
                      <span class="sheet-icon">üìà</span>
                      <div>
                        <strong>Monthly Breakdown</strong>
                        <p>Detailed monthly planning and cash flow management</p>
                      </div>
                    </div>
                    <div class="sheet-item">
                      <span class="sheet-icon">‚öñÔ∏è</span>
                      <div>
                        <strong>Cost Comparison</strong>
                        <p>Compare in-house vs professional maintenance costs</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Download Form -->
          <div class="download-form bg-white shadow-lg rounded-lg">
            <h2>Download Budget Template</h2>
            <p class="text-secondary mb-xl">Get your professional Excel template for comprehensive artificial turf budget planning.</p>
            
            <form id="download-form">
              <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required>
              </div>

              <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required>
              </div>

              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>

              <div class="form-group">
                <label for="organization">School/Organization *</label>
                <input type="text" id="organization" name="organization" required>
              </div>

              <div class="form-group">
                <label for="title">Job Title</label>
                <input type="text" id="title" name="title" placeholder="Athletic Director, Facilities Manager, etc.">
              </div>

              <div class="form-group">
                <label for="budgetSize">Annual Maintenance Budget</label>
                <select id="budgetSize" name="budgetSize">
                  <option value="">Select range...</option>
                  <option value="under-10k">Under $10,000</option>
                  <option value="10k-25k">$10,000 - $25,000</option>
                  <option value="25k-50k">$25,000 - $50,000</option>
                  <option value="50k-100k">$50,000 - $100,000</option>
                  <option value="over-100k">Over $100,000</option>
                </select>
              </div>

              <div class="form-group">
                <label for="planningStage">Budget Planning Stage</label>
                <select id="planningStage" name="planningStage">
                  <option value="">Select...</option>
                  <option value="next-year">Planning for next fiscal year</option>
                  <option value="mid-year">Mid-year budget review</option>
                  <option value="new-field">Planning for new field</option>
                  <option value="cost-reduction">Looking to reduce costs</option>
                </select>
              </div>

              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="consultation-interest" name="consultation-interest">
                  <span class="checkmark"></span>
                  I'd like a free budget consultation call
                </label>
              </div>

              <button type="submit" class="btn btn-primary btn-large" style="width: 100%;">
                <span class="icon icon-download icon-small"></span>
                Download Excel Template
              </button>
            </form>

            <div class="trust-indicators">
              <div class="trust-item">
                <span class="icon icon-professional icon-small"></span>
                <span>Professional accounting formulas</span>
              </div>
              <div class="trust-item">
                <span class="icon icon-excel icon-small"></span>
                <span>Compatible with Excel & Google Sheets</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="benefits-section section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Why Professional Budget Planning Matters</h2>
          <p class="text-large text-secondary">Avoid costly surprises and maximize your maintenance investment</p>
        </div>
        
        <div class="benefits-grid grid grid-3">
          <div class="benefit-card bg-white shadow-lg rounded-lg">
            <div class="benefit-icon icon icon-money icon-large icon-success"></div>
            <h3>Cost Control</h3>
            <p>Prevent budget overruns with detailed planning and monthly tracking of all maintenance expenses.</p>
            <ul class="benefit-features">
              <li>Monthly variance tracking</li>
              <li>Emergency fund allocation</li>
              <li>Seasonal cost planning</li>
            </ul>
          </div>
          
          <div class="benefit-card bg-white shadow-lg rounded-lg">
            <div class="benefit-icon icon icon-chart icon-large icon-primary"></div>
            <h3>Data-Driven Decisions</h3>
            <p>Make informed decisions with ROI calculations and cost-benefit analysis tools built into the template.</p>
            <ul class="benefit-features">
              <li>Professional vs in-house comparison</li>
              <li>Cost per square foot analysis</li>
              <li>Long-term savings projections</li>
            </ul>
          </div>
          
          <div class="benefit-card bg-white shadow-lg rounded-lg">
            <div class="benefit-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Strategic Planning</h3>
            <p>Plan for multiple years ahead with forecasting tools and strategic budget allocation guidance.</p>
            <ul class="benefit-features">
              <li>5-year budget forecasting</li>
              <li>Capital expense planning</li>
              <li>Performance metrics tracking</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Resources -->
    <section class="related-resources section">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Complete Your Planning Toolkit</h2>
          <p class="text-large text-secondary">Additional resources for comprehensive facility management</p>
        </div>
        
        <div class="resources-grid grid grid-3">
          <div class="resource-card bg-white shadow-lg rounded-lg">
            <div class="resource-icon icon icon-document icon-large icon-secondary"></div>
            <h3>Maintenance Checklist</h3>
            <p>Comprehensive checklist for routine artificial turf maintenance and inspection schedules.</p>
            <a href="/resources/maintenance-checklist" class="btn btn-outline btn-small">Download Checklist</a>
          </div>
          
          <div class="resource-card bg-white shadow-lg rounded-lg">
            <div class="resource-icon icon icon-shield icon-large icon-secondary"></div>
            <h3>Safety Standards Guide</h3>
            <p>Complete guide to artificial turf safety standards, testing requirements, and compliance.</p>
            <a href="/resources/safety-standards" class="btn btn-outline btn-small">Download Guide</a>
          </div>
          
          <div class="resource-card bg-white shadow-lg rounded-lg highlight-card">
            <div class="resource-icon icon icon-calculator icon-large icon-primary"></div>
            <h3>ROI Calculator</h3>
            <p>Interactive calculator to determine the return on investment for professional maintenance.</p>
            <a href="/roi-calculator" class="btn btn-primary btn-small">Launch Calculator</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .download-layout {
    gap: var(--space-3xl);
    align-items: start;
  }

  .preview-card,
  .download-form {
    padding: var(--space-3xl);
  }

  .preview-header {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    align-items: center;
  }

  .file-info h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-sm);
  }

  .file-meta {
    display: flex;
    gap: var(--space-md);
  }

  .file-type, .file-size, .file-sheets {
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    border-radius: 15px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .file-type {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .file-size {
    background: var(--color-neutral-100);
    color: var(--color-neutral-600);
  }

  .file-sheets {
    background: var(--color-success-100);
    color: var(--color-success-700);
  }

  .preview-content h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-lg);
  }

  .checklist-items {
    list-style: none;
    padding: 0;
    margin-bottom: var(--space-xl);
  }

  .checklist-items li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .template-preview {
    padding: var(--space-lg);
    background: var(--color-neutral-50);
    border-radius: var(--radius-md);
  }

  .sheets-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .sheet-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }

  .sheet-icon {
    font-size: 1.5rem;
    min-width: 2rem;
  }

  .sheet-item strong {
    color: var(--color-primary-600);
    display: block;
    margin-bottom: var(--space-xs);
  }

  .sheet-item p {
    font-size: 0.9rem;
    color: var(--color-neutral-600);
    margin: 0;
  }

  .download-form h2 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: var(--color-neutral-700);
    margin-bottom: var(--space-sm);
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: var(--space-md);
    border: 2px solid var(--color-neutral-200);
    border-radius: var(--radius-md);
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-primary-500);
  }

  .checkbox-group {
    margin-bottom: var(--space-xl);
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--color-neutral-600);
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin: 0;
  }

  .trust-indicators {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-neutral-200);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-neutral-500);
    font-size: 0.875rem;
    margin-bottom: var(--space-sm);
  }

  .benefit-card {
    padding: var(--space-2xl);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .benefit-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .benefit-icon {
    margin-bottom: var(--space-lg);
  }

  .benefit-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .benefit-card p {
    color: var(--color-neutral-600);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }

  .benefit-features {
    list-style: none;
    padding: 0;
  }

  .benefit-features li {
    color: var(--color-neutral-600);
    font-size: 0.9rem;
    padding: var(--space-xs) 0;
    position: relative;
    padding-left: var(--space-lg);
  }

  .benefit-features li::before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
    font-weight: bold;
  }

  .resource-card {
    padding: var(--space-2xl);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .highlight-card {
    border-color: var(--color-primary-300);
    background: linear-gradient(135deg, white 0%, var(--color-primary-50) 100%);
  }

  .resource-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .resource-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .resource-card p {
    color: var(--color-neutral-600);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .download-layout {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .preview-card,
    .download-form {
      padding: var(--space-xl);
    }

    .preview-header {
      flex-direction: column;
      text-align: center;
    }

    .file-meta {
      justify-content: center;
    }

    .benefits-grid,
    .resources-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .preview-card,
    .download-form {
      padding: var(--space-lg);
    }

    .file-meta {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .benefit-card {
      padding: var(--space-xl);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('download-form');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      handleDownload();
    });

    function handleDownload() {
      const formContainer = document.querySelector('.download-form');
      
      formContainer.innerHTML = `
        <div class="download-success">
          <div class="success-icon icon icon-check icon-large icon-success"></div>
          <h2>Template Downloaded!</h2>
          <p class="text-secondary mb-xl">Your Budget Planning Template is downloading now. Check your email for additional budget resources and tips.</p>
          
          <div class="next-steps">
            <h3>Get Started with Your Budget:</h3>
            <ul class="next-steps-list">
              <li><span class="icon icon-check icon-small"></span> Open the Excel template</li>
              <li><span class="icon icon-check icon-small"></span> Input your current costs</li>
              <li><span class="icon icon-check icon-small"></span> Review cost comparison analysis</li>
              <li><span class="icon icon-check icon-small"></span> Plan for next fiscal year</li>
            </ul>
          </div>
          
          <div class="action-buttons">
            <a href="/roi-calculator" class="btn btn-primary btn-large">Calculate ROI</a>
            <a href="/contact" class="btn btn-outline btn-large">Get Budget Consultation</a>
          </div>
        </div>
      `;

      // Add success styles
      if (!document.getElementById('success-styles')) {
        const style = document.createElement('style');
        style.id = 'success-styles';
        style.textContent = `
          .download-success {
            text-align: center;
            padding: var(--space-xl);
          }
          
          .success-icon {
            margin: 0 auto var(--space-lg) auto;
          }
          
          .download-success h2 {
            color: var(--color-success-600);
            margin-bottom: var(--space-md);
          }
          
          .next-steps {
            margin: var(--space-2xl) 0;
            text-align: left;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
          }
          
          .next-steps h3 {
            color: var(--color-primary-600);
            margin-bottom: var(--space-lg);
            text-align: center;
          }
          
          .next-steps-list {
            list-style: none;
            padding: 0;
          }
          
          .next-steps-list li {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            padding: var(--space-sm) 0;
            color: var(--color-neutral-700);
          }
          
          .action-buttons {
            display: flex;
            gap: var(--space-lg);
            justify-content: center;
            margin-top: var(--space-xl);
            flex-wrap: wrap;
          }
          
          @media (max-width: 480px) {
            .action-buttons {
              flex-direction: column;
              align-items: center;
            }
          }
        `;
        document.head.appendChild(style);
      }

      // Trigger file download
      const content = "Artificial Turf Budget Planning Template - Demo Download\n\nThis would be your actual Excel template in production.";
      const blob = new Blob([content], { type: 'text/plain' });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'turf-maintenance-budget-template.xlsx';
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      document.body.removeChild(a);
    }
  });
</script>