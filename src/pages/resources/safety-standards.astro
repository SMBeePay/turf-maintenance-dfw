---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Safety Standards Guide Download | Texas Turf Maintenance"
  description="Download our comprehensive artificial turf safety standards guide. Essential compliance information for athletic directors and facility managers."
  keywords="artificial turf safety standards, field safety guide, sports field safety compliance, turf safety regulations PDF"
  canonical="/resources/safety-standards"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-shield icon-small icon-white"></span> Safety Compliance</div>
        <h1 class="text-white">Artificial Turf Safety Standards Guide</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Complete guide to safety standards, testing, and compliance protocols</p>
      </div>
    </section>

    <!-- Download Section -->
    <section class="download-section section">
      <div class="container">
        <div class="download-layout grid grid-2">
          <!-- Resource Preview -->
          <div class="resource-preview">
            <div class="preview-card bg-white shadow-lg rounded-lg">
              <div class="preview-header">
                <div class="file-icon icon icon-shield icon-large icon-primary"></div>
                <div class="file-info">
                  <h3>Safety Standards Guide</h3>
                  <div class="file-meta">
                    <span class="file-type">PDF</span>
                    <span class="file-size">3.4 MB</span>
                    <span class="file-pages">18 Pages</span>
                  </div>
                </div>
              </div>
              
              <div class="preview-content">
                <h4>Comprehensive Coverage:</h4>
                <ul class="checklist-items">
                  <li><span class="icon icon-check icon-small"></span> ASTM testing standards</li>
                  <li><span class="icon icon-check icon-small"></span> GMAX impact testing protocols</li>
                  <li><span class="icon icon-check icon-small"></span> Shear factor analysis requirements</li>
                  <li><span class="icon icon-check icon-small"></span> Infill depth specifications</li>
                  <li><span class="icon icon-check icon-small"></span> Heat management guidelines</li>
                  <li><span class="icon icon-check icon-small"></span> UV resistance standards</li>
                  <li><span class="icon icon-check icon-small"></span> Drainage requirements</li>
                  <li><span class="icon icon-check icon-small"></span> Compliance documentation</li>
                </ul>
                
                <div class="partner-highlight">
                  <h4>Professional Testing Partner</h4>
                  <p>This guide includes information about our partnership with <strong>Field Health Systems</strong> for comprehensive field testing and safety monitoring.</p>
                  <a href="/field-safety" class="btn btn-outline btn-small">Learn More About Field Safety</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Download Form -->
          <div class="download-form bg-white shadow-lg rounded-lg">
            <h2>Download Your Safety Guide</h2>
            <p class="text-secondary mb-xl">Get instant access to the complete artificial turf safety standards guide.</p>
            
            <form id="download-form">
              <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required>
              </div>

              <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required>
              </div>

              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>

              <div class="form-group">
                <label for="organization">School/Organization *</label>
                <input type="text" id="organization" name="organization" required>
              </div>

              <div class="form-group">
                <label for="title">Job Title</label>
                <input type="text" id="title" name="title" placeholder="Athletic Director, Facilities Manager, etc.">
              </div>

              <div class="form-group">
                <label for="urgency">Safety Testing Priority</label>
                <select id="urgency" name="urgency">
                  <option value="">Select...</option>
                  <option value="immediate">Need testing immediately</option>
                  <option value="planning">Planning for next season</option>
                  <option value="compliance">Compliance review</option>
                  <option value="information">General information</option>
                </select>
              </div>

              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="testing-interest" name="testing-interest">
                  <span class="checkmark"></span>
                  I'm interested in professional field testing services
                </label>
              </div>

              <button type="submit" class="btn btn-primary btn-large" style="width: 100%;">
                <span class="icon icon-download icon-small"></span>
                Download Safety Guide
              </button>
            </form>

            <div class="trust-indicators">
              <div class="trust-item">
                <span class="icon icon-shield icon-small"></span>
                <span>ASTM compliant information</span>
              </div>
              <div class="trust-item">
                <span class="icon icon-professional icon-small"></span>
                <span>Industry expert reviewed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Resources -->
    <section class="related-resources section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Complete Your Safety Knowledge</h2>
          <p class="text-large text-secondary">Additional resources to ensure comprehensive field safety</p>
        </div>
        
        <div class="resources-grid grid grid-3">
          <div class="resource-card bg-white shadow-lg rounded-lg">
            <div class="resource-icon icon icon-document icon-large icon-secondary"></div>
            <h3>Maintenance Checklist</h3>
            <p>Comprehensive checklist for routine artificial turf maintenance and inspection schedules.</p>
            <a href="/resources/maintenance-checklist" class="btn btn-outline btn-small">Download Checklist</a>
          </div>
          
          <div class="resource-card bg-white shadow-lg rounded-lg">
            <div class="resource-icon icon icon-budget icon-large icon-secondary"></div>
            <h3>Budget Planning Template</h3>
            <p>Detailed template for planning annual artificial turf maintenance budgets.</p>
            <a href="/resources/budget-template" class="btn btn-outline btn-small">Download Template</a>
          </div>
          
          <div class="resource-card bg-white shadow-lg rounded-lg highlight-card">
            <div class="resource-icon icon icon-professional icon-large icon-primary"></div>
            <h3>Professional Testing</h3>
            <p>Learn about comprehensive field testing and safety monitoring services.</p>
            <a href="/field-safety" class="btn btn-primary btn-small">Learn More</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .download-layout {
    gap: var(--space-3xl);
    align-items: start;
  }

  .preview-card,
  .download-form {
    padding: var(--space-3xl);
  }

  .preview-header {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    align-items: center;
  }

  .file-info h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-sm);
  }

  .file-meta {
    display: flex;
    gap: var(--space-md);
  }

  .file-type, .file-size, .file-pages {
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    border-radius: 15px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .file-type {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .file-size {
    background: var(--color-neutral-100);
    color: var(--color-neutral-600);
  }

  .file-pages {
    background: var(--color-success-100);
    color: var(--color-success-700);
  }

  .preview-content h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-lg);
  }

  .checklist-items {
    list-style: none;
    padding: 0;
    margin-bottom: var(--space-xl);
  }

  .checklist-items li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .partner-highlight {
    padding: var(--space-lg);
    background: var(--color-primary-50);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--color-primary-500);
  }

  .partner-highlight h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .partner-highlight p {
    color: var(--color-neutral-700);
    margin-bottom: var(--space-lg);
    font-size: 0.9rem;
  }

  .download-form h2 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: var(--color-neutral-700);
    margin-bottom: var(--space-sm);
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: var(--space-md);
    border: 2px solid var(--color-neutral-200);
    border-radius: var(--radius-md);
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-primary-500);
  }

  .checkbox-group {
    margin-bottom: var(--space-xl);
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--color-neutral-600);
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin: 0;
  }

  .trust-indicators {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-neutral-200);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-neutral-500);
    font-size: 0.875rem;
    margin-bottom: var(--space-sm);
  }

  .resource-card {
    padding: var(--space-2xl);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .highlight-card {
    border-color: var(--color-primary-300);
    background: linear-gradient(135deg, white 0%, var(--color-primary-50) 100%);
  }

  .resource-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .resource-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .resource-card p {
    color: var(--color-neutral-600);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .download-layout {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .preview-card,
    .download-form {
      padding: var(--space-xl);
    }

    .preview-header {
      flex-direction: column;
      text-align: center;
    }

    .file-meta {
      justify-content: center;
    }

    .resources-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .preview-card,
    .download-form {
      padding: var(--space-lg);
    }

    .file-meta {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('download-form');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      handleDownload();
    });

    function handleDownload() {
      const formContainer = document.querySelector('.download-form');
      
      formContainer.innerHTML = `
        <div class="download-success">
          <div class="success-icon icon icon-check icon-large icon-success"></div>
          <h2>Download Complete!</h2>
          <p class="text-secondary mb-xl">Your Safety Standards Guide is downloading now. You'll also receive additional safety resources via email.</p>
          
          <div class="next-steps">
            <h3>Ensure Field Safety:</h3>
            <ul class="next-steps-list">
              <li><span class="icon icon-check icon-small"></span> Review ASTM testing requirements</li>
              <li><span class="icon icon-check icon-small"></span> Schedule regular safety assessments</li>
              <li><span class="icon icon-check icon-small"></span> Document compliance measures</li>
              <li><span class="icon icon-check icon-small"></span> Consider professional testing services</li>
            </ul>
          </div>
          
          <div class="action-buttons">
            <a href="/field-safety" class="btn btn-primary btn-large">Learn About Field Testing</a>
            <a href="/contact" class="btn btn-outline btn-large">Schedule Assessment</a>
          </div>
        </div>
      `;

      // Add success styles
      if (!document.getElementById('success-styles')) {
        const style = document.createElement('style');
        style.id = 'success-styles';
        style.textContent = `
          .download-success {
            text-align: center;
            padding: var(--space-xl);
          }
          
          .success-icon {
            margin: 0 auto var(--space-lg) auto;
          }
          
          .download-success h2 {
            color: var(--color-success-600);
            margin-bottom: var(--space-md);
          }
          
          .next-steps {
            margin: var(--space-2xl) 0;
            text-align: left;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
          }
          
          .next-steps h3 {
            color: var(--color-primary-600);
            margin-bottom: var(--space-lg);
            text-align: center;
          }
          
          .next-steps-list {
            list-style: none;
            padding: 0;
          }
          
          .next-steps-list li {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            padding: var(--space-sm) 0;
            color: var(--color-neutral-700);
          }
          
          .action-buttons {
            display: flex;
            gap: var(--space-lg);
            justify-content: center;
            margin-top: var(--space-xl);
            flex-wrap: wrap;
          }
          
          @media (max-width: 480px) {
            .action-buttons {
              flex-direction: column;
              align-items: center;
            }
          }
        `;
        document.head.appendChild(style);
      }

      // Trigger file download
      const content = "Artificial Turf Safety Standards Guide - Demo Download\n\nThis would be your actual PDF safety guide in production.";
      const blob = new Blob([content], { type: 'text/plain' });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'artificial-turf-safety-standards.pdf';
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      document.body.removeChild(a);
    }
  });
</script>