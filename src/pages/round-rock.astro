---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Round Rock Artificial Turf Maintenance | Synthetic Field Cleaning Services Round Rock TX"
  description="Professional artificial turf maintenance services in Round Rock, Texas. Expert synthetic turf cleaning, sanitization, and repair for Round Rock ISD and local sports facilities."
  keywords="artificial turf maintenance Round Rock, synthetic turf cleaning Round Rock TX, Round Rock ISD field maintenance, sports field cleaning Round Rock, turf repair Round Rock Texas"
  canonical="/round-rock"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> Round Rock, TX</div>
        <h1 class="text-white">Round Rock Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for Round Rock's growing sports community</p>
      </div>
    </section>

    <!-- Round Rock Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving Round Rock's Athletic Growth</h2>
            <p class="text-large text-secondary">Round Rock represents one of Texas's fastest-growing communities with expanding athletic programs. Our artificial turf maintenance services support both established facilities and new venues as Round Rock continues developing its sports infrastructure.</p>
            
            <div class="service-highlights">
              <h3>Growing Community Expertise</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-target icon-small"></span> Rapid growth accommodation</li>
                <li><span class="icon icon-stadium icon-small"></span> New facility startup support</li>
                <li><span class="icon icon-shield icon-small"></span> Central Texas climate adaptation</li>
                <li><span class="icon icon-tools icon-small"></span> Multi-demographic sports needs</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Growing</div>
              <div class="stat-label">Sports Community</div>
              <p class="text-small text-secondary">Expanding athletic programs</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Professional</div>
              <div class="stat-label">Baseball Legacy</div>
              <p class="text-small text-secondary">Minor league sports heritage</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Austin</div>
              <div class="stat-label">Metro Access</div>
              <p class="text-small text-secondary">Capital city proximity benefits</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Round Rock Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>Round Rock Area Sports Facilities</h2>
          <p class="text-large text-secondary">Professional maintenance for Round Rock's expanding athletic venues</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>Round Rock ISD Athletics</h3>
            <p>Round Rock Independent School District facilities:</p>
            <ul>
              <li>Round Rock High School Dragons</li>
              <li>McNeil High School Mavericks</li>
              <li>Westwood High School Warriors</li>
              <li>Cedar Ridge High School Raiders</li>
              <li>District athletic complexes</li>
            </ul>
            <p class="service-note">Supporting Round Rock ISD's growing athletic programs.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>Professional & Community</h3>
            <p>Round Rock's professional and community sports venues:</p>
            <ul>
              <li>Professional baseball facilities</li>
              <li>Round Rock Sports Center venues</li>
              <li>Municipal athletic facilities</li>
              <li>Community recreation centers</li>
              <li>Youth sports complexes</li>
            </ul>
            <p class="service-note">Comprehensive care for Round Rock's diverse sports infrastructure.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Youth & Development</h3>
            <p>Round Rock's youth athletics and development facilities:</p>
            <ul>
              <li>Soccer club training venues</li>
              <li>Youth baseball complexes</li>
              <li>Multi-sport development centers</li>
              <li>Private athletic academies</li>
              <li>Recreational league facilities</li>
            </ul>
            <p class="service-note">Maintaining fields for Round Rock's youth sports growth.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">Professional Turf Care for Round Rock</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Expert artificial turf maintenance supporting Round Rock's growing sports community.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get Round Rock Quote</a>
          <a href="/austin" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">Austin Metro Service</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>