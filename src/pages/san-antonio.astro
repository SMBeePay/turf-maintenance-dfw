---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="San Antonio Artificial Turf Maintenance | Sports Field Cleaning Services San Antonio TX"
  description="Professional artificial turf maintenance services in San Antonio, Texas. Expert synthetic turf cleaning, sanitization, and repair for San Antonio area schools and sports facilities."
  keywords="artificial turf maintenance San Antonio, synthetic turf cleaning San Antonio, sports field maintenance San Antonio TX, San Antonio turf repair services, artificial grass cleaning San Antonio"
  canonical="/san-antonio"
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header bg-primary text-white">
      <div class="container text-center">
        <div class="hero-badge"><span class="icon icon-location icon-small icon-white"></span> San Antonio Area Service</div>
        <h1 class="text-white">San Antonio Artificial Turf Maintenance</h1>
        <p class="text-large" style="color: rgba(255, 255, 255, 0.95);">Professional synthetic turf care for San Antonio schools, sports complexes, and facilities</p>
      </div>
    </section>

    <!-- San Antonio Overview -->
    <section class="location-overview section">
      <div class="container">
        <div class="overview-content grid grid-2">
          <div class="overview-text">
            <h2>Serving San Antonio's Sports Community</h2>
            <p class="text-large text-secondary">San Antonio's hot, dry climate and intense UV exposure require specialized artificial turf maintenance. From UTSA facilities to local high schools, we provide expert care tailored to South Texas conditions.</p>
            
            <div class="service-highlights">
              <h3>South Texas Expertise</h3>
              <ul class="highlight-list">
                <li><span class="icon icon-shield icon-small"></span> UV protection and heat management</li>
                <li><span class="icon icon-sanitize icon-small"></span> Dust and debris control systems</li>
                <li><span class="icon icon-tools icon-small"></span> UTSA and college-level experience</li>
                <li><span class="icon icon-target icon-small"></span> Military academy facility knowledge</li>
              </ul>
            </div>
          </div>
          
          <div class="overview-stats">
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Military City</div>
              <div class="stat-label">Precision Service</div>
              <p class="text-small text-secondary">Military-grade attention to detail</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">Desert</div>
              <div class="stat-label">Climate Adapted</div>
              <p class="text-small text-secondary">Hot, dry weather expertise</p>
            </div>
            <div class="stat-card bg-primary-light rounded-lg text-center">
              <div class="stat-number text-primary">UTSA</div>
              <div class="stat-label">University Ready</div>
              <p class="text-small text-secondary">Collegiate-level standards</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- San Antonio Facilities -->
    <section class="facilities section bg-neutral-light">
      <div class="container">
        <div class="section-header text-center mb-2xl">
          <h2>San Antonio Area Sports Facilities</h2>
          <p class="text-large text-secondary">Professional maintenance for San Antonio's extensive sports facility network</p>
        </div>
        
        <div class="facilities-grid grid grid-auto">
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-stadium icon-large icon-secondary"></div>
            <h3>San Antonio ISD & Area Schools</h3>
            <p>Major school districts with artificial turf facilities:</p>
            <ul>
              <li>Northside ISD athletic complexes</li>
              <li>North East ISD sports fields</li>
              <li>San Antonio ISD facilities</li>
              <li>South San Antonio ISD venues</li>
              <li>Regional high school stadiums</li>
            </ul>
            <p class="service-note">Comprehensive maintenance for San Antonio area school athletics.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-target icon-large icon-secondary"></div>
            <h3>Universities & Colleges</h3>
            <p>San Antonio's higher education athletic facilities:</p>
            <ul>
              <li>UTSA Roadrunner facilities</li>
              <li>Trinity University fields</li>
              <li>St. Mary's University athletics</li>
              <li>University of Incarnate Word</li>
              <li>San Antonio College venues</li>
            </ul>
            <p class="service-note">University-level maintenance standards and expertise.</p>
          </div>
          
          <div class="facility-card bg-white shadow-lg rounded-lg">
            <div class="facility-icon icon icon-tools icon-large icon-secondary"></div>
            <h3>Professional & Community</h3>
            <p>San Antonio's professional and community sports venues:</p>
            <ul>
              <li>San Antonio FC training facilities</li>
              <li>City of San Antonio park fields</li>
              <li>Military base athletic facilities</li>
              <li>Private sports academies</li>
              <li>Youth soccer complexes</li>
            </ul>
            <p class="service-note">Specialized care for San Antonio's diverse facility types.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- San Antonio Climate Considerations -->
    <section class="climate-section section">
      <div class="container">
        <h2 class="text-center mb-2xl">San Antonio Climate & Turf Challenges</h2>
        <div class="climate-content grid grid-2">
          <div class="climate-info">
            <h3>South Texas Desert Conditions</h3>
            <p>San Antonio's semi-arid climate creates specific maintenance requirements:</p>
            <ul class="climate-list">
              <li><strong>Extreme Heat:</strong> Summer temperatures exceeding 100Â°F regularly</li>
              <li><strong>Intense UV:</strong> High altitude sun requiring UV protection</li>
              <li><strong>Dust Storms:</strong> Regular dust and debris accumulation</li>
              <li><strong>Flash Droughts:</strong> Rapid moisture loss and brittleness</li>
              <li><strong>Limited Rainfall:</strong> Efficient cleaning without waste</li>
            </ul>
          </div>
          
          <div class="climate-services bg-primary-light rounded-lg">
            <h3>San Antonio-Specific Solutions</h3>
            <div class="service-list">
              <div class="service-item">
                <span class="icon icon-shield icon-small"></span>
                <div>
                  <h4>UV Protection</h4>
                  <p>Advanced treatments to prevent sun damage and maintain turf integrity in extreme conditions.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-cleaning icon-small"></span>
                <div>
                  <h4>Dust Management</h4>
                  <p>Specialized cleaning protocols for South Texas dust and debris accumulation.</p>
                </div>
              </div>
              <div class="service-item">
                <span class="icon icon-sanitize icon-small"></span>
                <div>
                  <h4>Heat Mitigation</h4>
                  <p>Cooling techniques and heat-resistant treatments for extreme summer conditions.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- San Antonio Service Areas -->
    <section class="service-areas section bg-neutral-light">
      <div class="container">
        <h2 class="text-center mb-2xl">Greater San Antonio Service Coverage</h2>
        <div class="areas-grid grid grid-4">
          <div class="area-column">
            <h4>North San Antonio</h4>
            <ul>
              <li>Stone Oak</li>
              <li>Castle Hills</li>
              <li>Alamo Heights</li>
              <li>Terrell Hills</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>Northwest San Antonio</h4>
            <ul>
              <li>Medical Center</li>
              <li>Shavano Park</li>
              <li>Hollywood Park</li>
              <li>Hill Country Village</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>South San Antonio</h4>
            <ul>
              <li>Southtown</li>
              <li>Brooks City Base</li>
              <li>Mitchell Lake</li>
              <li>Elmendorf</li>
            </ul>
          </div>
          <div class="area-column">
            <h4>East San Antonio</h4>
            <ul>
              <li>Fort Sam Houston</li>
              <li>Kirby</li>
              <li>Windcrest</li>
              <li>Converse</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white">
      <div class="container text-center">
        <h2 class="text-white mb-lg">San Antonio Sports Field Maintenance</h2>
        <p class="text-large mb-xl" style="color: rgba(255, 255, 255, 0.95);">Expert artificial turf maintenance designed for South Texas desert conditions and San Antonio's athletic community.</p>
        
        <div class="cta-buttons flex-center">
          <a href="/contact" class="btn btn-secondary btn-large">Get San Antonio Quote</a>
          <a href="/field-safety" class="btn btn-outline btn-large" style="color: white; border-color: rgba(255, 255, 255, 0.3);">Field Safety Info</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Reuse styles from other location pages */
  .page-header {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    margin-bottom: var(--space-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-card {
    padding: var(--space-xl);
  }

  .stat-number {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-sm);
  }

  .facility-card {
    padding: var(--space-2xl);
    text-align: center;
  }

  .facility-icon {
    margin: 0 auto var(--space-lg) auto;
  }

  .facility-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .facility-card ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
    text-align: left;
  }

  .facility-card li {
    padding: var(--space-xs) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-neutral-600);
  }

  .facility-card li::before {
    content: "â¢";
    position: absolute;
    left: 0;
    color: var(--color-primary-500);
  }

  .service-note {
    font-size: 0.875rem;
    color: var(--color-primary-600);
    font-weight: 600;
    margin-top: var(--space-md);
    text-align: center;
  }

  .highlight-list {
    list-style: none;
    padding: 0;
  }

  .highlight-list li {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .climate-services {
    padding: var(--space-2xl);
  }

  .service-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .service-item h4 {
    color: var(--color-primary-700);
    margin-bottom: var(--space-sm);
  }

  .service-item p {
    color: var(--color-neutral-600);
    font-size: 0.95rem;
    margin: 0;
  }

  .area-column {
    text-align: center;
    padding: var(--space-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .area-column h4 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-md);
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: var(--space-xs) 0;
    color: var(--color-neutral-600);
  }

  .climate-list {
    list-style: none;
    padding: 0;
  }

  .climate-list li {
    padding: var(--space-sm) 0;
    color: var(--color-neutral-700);
  }

  .climate-list strong {
    color: var(--color-primary-600);
  }

  .cta {
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-buttons {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .overview-content,
    .climate-content {
      grid-template-columns: 1fr;
    }

    .areas-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .areas-grid {
      grid-template-columns: 1fr;
    }

    .facility-card {
      padding: var(--space-lg);
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>